{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "baseUrl": ".",
    "paths": {
      "@fristtx/prepaint": ["packages/prepaint/src/index.ts"],
      "@fristtx/prepaint/*": ["packages/prepaint/src/*"],
      "@fristtx/local-first": ["packages/local-first/src/index.ts"],
      "@fristtx/local-first/*": ["packages/local-first/src/*"],
      "@fristtx/tx": ["packages/tx/src/index.ts"],
      "@fristtx/tx/*": ["packages/tx/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage", ".turbo"]
}
