{
  "name": "@firsttx/local-first",
  "version": "0.1.1",
  "description": "Local-First bridges IndexedDB (async) and React state (sync) using useSyncExternalStore plus an in-memory cache, so components read state synchronously from the very first render. It tracks freshness (isStale, age) and pairs with Tx for fast optimistic updates that remain durable offline.",
  "license": "MIT",
  "author": "joseph0926",
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "local-first",
    "offline-first",
    "indexeddb",
    "snapshot",
    "persistence"
  ],
  "peerDependencies": {
    "react": "^18.2.0 || ^19.2.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4",
    "zod": "^3.23.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git",
    "directory": "packages/local-first"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx/tree/main/packages/local-first#readme"
}
