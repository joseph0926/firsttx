{
  "name": "@firsttx/shared",
  "version": "0.3.1",
  "description": "Shared utilities for FirstTx packages",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "dompurify": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "dompurify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "dompurify": "^3.3.1",
    "happy-dom": "^20.7.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git",
    "directory": "packages/shared"
  }
}
