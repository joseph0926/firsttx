{
  "name": "@firsttx/prepaint",
  "version": "0.9.2",
  "description": "Instant boot script for CSR apps that replays IndexedDB snapshots before React loads, delivering ~0 ms revisit blanks with automatic hydration or clean rerender fallback.",
  "license": "MIT",
  "author": "joseph0926",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin/vite": {
      "types": "./dist/plugin/vite.d.ts",
      "import": "./dist/plugin/vite.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup src/index.ts src/boot.ts src/plugin/vite.ts --dts --format esm --out-dir dist",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "prepaint",
    "csr",
    "hydration",
    "view-transitions",
    "bootstrap",
    "inline-script",
    "react"
  ],
  "dependencies": {
    "@firsttx/shared": "workspace:*"
  },
  "peerDependencies": {
    "dompurify": "^3.3.0",
    "esbuild": "^0.25.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "vite": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "dompurify": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.10",
    "@vitest/coverage-v8": "^4.0.18",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git",
    "directory": "packages/prepaint"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx/tree/main/packages/prepaint#readme"
}
