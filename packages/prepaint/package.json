{
  "name": "@fristtx/prepaint",
  "version": "0.0.0",
  "description": "Prepaint CSR runtime and build plugins for FirstTx. Renders snapshot-based HTML before the main bundle, then hands off via hydrate-match or view transitions.",
  "license": "MIT",
  "author": "joseph0926",
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin/vite": {
      "import": "./dist/plugin/vite.js"
    },
    "./plugin/esbuild": {
      "import": "./dist/plugin/esbuild.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup src/index.ts src/plugin/vite.ts src/plugin/esbuild.ts --dts --format esm --out-dir dist",
    "clean": "rimraf dist",
    "test": "echo \"(no tests yet)\" && exit 0",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "prepaint",
    "csr",
    "hydration",
    "view-transitions",
    "bootstrap",
    "inline-script",
    "react"
  ],
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "vite": "^7.0.0",
    "esbuild": "^0.25.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    }
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git",
    "directory": "packages/prepaint"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx/tree/main/packages/prepaint#readme"
}
