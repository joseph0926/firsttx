{
  "name": "@firsttx/tx",
  "version": "0.2.1",
  "description": "Tx turns optimistic updates and server effects into a single atomic transaction with run(fn, { compensate, retry }). On failure it performs automatic rollback (reverse compensation), optionally wrapped in a View Transition, ensuring UI and data stay consistent.",
  "license": "MIT",
  "author": "joseph0926",
  "type": "module",
  "engines": {
    "node": ">=22.20.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup src/index.ts --dts --format esm --out-dir dist",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "keywords": [
    "transaction",
    "optimistic-ui",
    "undo-redo",
    "atomic",
    "graph",
    "consistency",
    "navigation"
  ],
  "peerDependencies": {
    "react": "^18.2.0 || ^19.2.0"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git",
    "directory": "packages/tx"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx/tree/main/packages/tx#readme"
}
