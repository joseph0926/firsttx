{
  "manifest_version": 3,
  "name": "FirstTx DevTools",
  "version": "0.1.0",
  "description": "Browser DevTools for debugging FirstTx apps",
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://*.local/*",
        "http://*.localhost/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"],
  "optional_host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["bridge.js"],
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://*.local/*",
        "http://*.localhost/*"
      ]
    }
  ],
  "homepage_url": "https://github.com/joseph0926/firsttx"
}
