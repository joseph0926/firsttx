{
  "name": "firsttx",
  "version": "0.0.0",
  "private": true,
  "description": "CSR-first toolkit that combines Prepaint, Local-First, and Tx to replay the last UI instantly, keep React state synced with IndexedDB, and execute optimistic transactions atomicallyâ€”no SSR required.",
  "license": "MIT",
  "author": "joseph0926",
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "prepaint",
    "local-first",
    "transaction",
    "optimistic-ui",
    "offline-first",
    "react",
    "csr",
    "undo-redo",
    "indexeddb",
    "atomic-transactions",
    "state-management",
    "view-transitions",
    "client-side-rendering",
    "hydration",
    "crdt"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules **/node_modules **/dist --glob",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier -w \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "release:version": "changeset version && pnpm install --no-frozen-lockfile",
    "release:publish": "turbo run build --filter='./packages/*' && changeset publish",
    "prepare": "husky",
    "tree": "tree -I 'node_modules|.git|.turbo|dist|build'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.2",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.2",
    "globals": "^17.0.0",
    "happy-dom": "^20.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
