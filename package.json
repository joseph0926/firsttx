{
  "name": "firsttx",
  "version": "0.0.0",
  "private": true,
  "description": "Prepaint CSR x Local-First x Transaction Graph is a single flow that removes blank screens, preserves continuity offline, and commits user actions atomically. The result is a faster first impression and a safer, more predictable appâ€”without leaning on SSR.",
  "license": "MIT",
  "author": "joseph0926",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.20.0"
  },
  "keywords": [
    "prepaint",
    "local-first",
    "transaction",
    "optimistic-ui",
    "offline-first",
    "react",
    "csr",
    "undo-redo",
    "indexeddb",
    "atomic-transactions",
    "state-management",
    "view-transitions",
    "client-side-rendering",
    "hydration",
    "crdt"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules **/node_modules **/dist --glob",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier -w \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "release:version": "changeset version && pnpm -w install --no-frozen-lockfile",
    "release:publish": "pnpm build && changeset publish",
    "prepare": "husky",
    "tree": "tree -I 'node_modules|.git|.turbo|dist|build'"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseph0926/firsttx.git"
  },
  "bugs": {
    "url": "https://github.com/joseph0926/firsttx/issues"
  },
  "homepage": "https://github.com/joseph0926/firsttx#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
