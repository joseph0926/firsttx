# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.{ts,tsx,js,jsx,json,cjs,mjs}]
indent_size = 2
